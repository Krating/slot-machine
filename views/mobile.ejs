<!DOCTYPE html>
<html>
<head>
	<script src="http://slmch.herokuapp/socket.io/socket.io.js"></script>
	
	<title>FB</title>
</head>
<body>
	<div id="status"></div>
	<div id="profile"></div>
	<button onclick="login()" id="login">Login</button>
	<button onclick="logout()" id="logout">Logout</button>
	<button onclick="start()" id="start">Start</button>

	<script>
	var socket = io.connect('http://slmch.herokuapp');

		window.fbAsyncInit = function() {
	    FB.init({
	      appId      : '235734090227419',
	      xfbml      : true,
	      version    : 'v2.8'
	    });

	    FB.login(function(response){
		  	if (response.status === 'connected') {
		  		document.getElementById('status').innerHTML = "We are Connected";
		  		document.getElementById('login').style.visibility = "hidden";
		  		FB.api('/me','GET',{fields: 'id,name,picture.width(150).height(150)'}, function(response) {
			  		
			  		socket.emit('input', {
						id:response.id,
						name:response.name,
						picture:response.picture.data.url
					});
					
					socket.on('output',function(data){
						console.log(data);
						document.getElementById('profile').innerHTML = data[0].id;
					});
				});
		  	} else if (response.status === 'not_authorized') {
		  		document.getElementById('status').innerHTML = "We are Not Connected";
		  	} else {
		  		document.getElementById('status').innerHTML = "We are Not Connected";
		  	}
	  	},{scope: 'publish_actions'});

	  };
	  console.log('hello');
	  



	  (function(d, s, id){
	     var js, fjs = d.getElementsByTagName(s)[0];
	     if (d.getElementById(id)) {return;}
	     js = d.createElement(s); js.id = id;
	     js.src = "//connect.facebook.net/en_US/sdk.js";
	     fjs.parentNode.insertBefore(js, fjs);
	   }(document, 'script', 'facebook-jssdk'));

	  function login() {
	  	FB.login(function(response){
	  		if(response.status === 'connected') {
	  			document.getElementById('status').innerHTML = 'We are connected';
	  			FB.api('/me','GET',{fields: 'id,name,picture.width(150).height(150)'}, function(response) {
	  	
	  			
	  	
	  			socket.emit('input', {
							id:response.id,
							name:response.name,
							picture:response.picture.data.url
						});


	  			socket.on('output',function(data){
						document.getElementById('profile').innerHTML = data[0].id;
					});

	  			});
	  		}
	  		else if (response.status === 'not_authorized') {
	  			document.getElementById('status').innerHTML = 'We are not login';
	  		}
	  		else {
	  			document.getElementById('status').innerHTML = 'We are not login';
	  		}
	  	},{scope: 'publish_actions'});
	  }

	  function logout(){
	  	FB.logout(function(response) {
			  console.log('logout');

			  document.getElementById('login').style.visibility = "visible";
			  socket.emit('logout', {
				id:"",
				name:"สวัสดี",
				picture:"http://upic.me/i/mq/0avatar.jpg"
			});
		});
	  }



	</script>

</body>
</html>
<script>
	function start(){

	  	socket.emit('getdata_rand');

	  	socket.once('data_rand',function(data){
	  		
	  		var rand = Math.floor((Math.random() * 100) + 1);
	  		console.log(rand);

	  		for (var i = 0; i < data.length; i++) {
	  			if (data[i].chance>=rand && data[i].num_reward>0) {
		  			console.log(data[i].chance);
		  			console.log('data'+i);
		  			console.log(data[i].num_reward-1);
		  			socket.emit('num_reward',data[i]);
	  			}
	  		}

	  	});
	  }
</script>